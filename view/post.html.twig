{% extends 'base.html.twig' %}
{% block title %} Post {% endblock %}
{% block body %}
{% for infoPost in post %}
    <div class="container p-5">
        <div class="d-flex summary">
            <img class="summary-image img-suqare img-responsive pull-right" 
            alt="Bootstrap template" src="{{infoPost.photo_url}}" width="500px" height="500px">
            <div class="p-4">
                <h2 class="summary-heading"> {{infoPost.titre}} </h2>
                <p class="lead"> {{infoPost.contenu}} </p>
                <p>crée le {{infoPost.date_creation}} par l'utilisateur n° {{infoPost.user_iduser}}</p>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}
