{% extends 'base.html.twig' %}
{% block title %} Post {% endblock %}
{% block body %}
<div class="container col-6 g-3">
    <form action="../public/form" method="post">
    <!-- Name input -->
    <div class="form-outline mb-4">
        <label class="form-label pt-5" for="form4Example1">Nom</label>
        <input name="name" type="text" id="form4Example1" class="form-control" />
    </div>

    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form4Example2">Adresse mail</label>
        <input name="mail" type="email" id="form4Example2" class="form-control" />
    </div>

    <!-- Message input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form4Example3">Message</label>
        <textarea name="contenu" class="form-control" id="form4Example3" rows="4"></textarea>
    </div>

    <input type="hidden" name="formulaire" value="contact">
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Envoyer</button>
    </form>
</div>
{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}
