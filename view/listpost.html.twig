{% extends 'base.html.twig' %}
{% block title %} Liste des pots {% endblock %}
{% block body %}

<div>
    <h3 class="p-3">Articles Publiés</h3>
</div>

<div class="container">
    <div class="row g-4">
        {% for infoPost in listpost %}
            <a class="text-decoration-none text-dark col-6" href="post?idblogpost={{infoPost.idblogpost}}">
                <div class="container p-1 border shadow rounded" style="background-color: #C2C4CC;">
                    <div class="well">
                        <div class="media d-flex">
                            <div class="p-3">
                            <img class="media-object" src="{{infoPost.photo_url}}" width="150px" height="150px">
                            </div>
                            <div class="media-body w-50">
                                <h4 class="media-heading"> {{infoPost.titre}} </h4>
                                <!-- contenu hidden
                                <p>{{infoPost.contenu}}</p>
                                -->
                                <p>{{infoPost.date_creation}}</p> 
                                <p>Autheur n° {{infoPost.user_iduser}} | x commentaires</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>

{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}