{% extends 'base.html.twig' %}
{% block title %} Connexion {% endblock %}
{% block body %}
<div class="container col-6 g-5">
    <form class="border border-dark p-3 m-5" action="../public/form" method="post">

        <!-- pseudo input -->
        <div class="form-outline m-2">
            <label class="form-label" for="form4Example2">Pseudo : </label>
            <input type="text" name="pseudo" id="form4Example2" class="form-control" />
        </div>

        <!-- nom input -->
        <div class="form-outline m-2">
            <label class="form-label " for="form4Example1">Nom : </label>
            <input type="text" name="nom" id="form4Example1" class="form-control" />
        </div>

        <!-- prenom input -->
        <div class="form-outline m-2">
            <label class="form-label " for="form4Example1">Pr√©nom : </label>
            <input type="text" name="prenom"  id="form4Example1" class="form-control" />
        </div>
        <!-- Email input -->
        <div class="form-outline m-2">
            <label class="form-label" for="form4Example2">Adresse mail : </label>
            <input type="email" name="mail" id="form4Example2" class="form-control" />
        </div>

        <!-- password input -->
        <div class="form-outline m-2">
            <label class="form-label " for="form4Example1">Mot de passe : </label>
            <input type="password" name="password" id="form4Example1" class="form-control" />
        </div>

        <input type="hidden" name="formulaire" value="registration">

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block m-2">Send</button>
    </form>
</div>
{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}