{% extends 'base.html.twig' %}
{% block title %} Connexion {% endblock %}
{% block body %}
<div class="container-fluid g-5 pt-5">
    <form class="border border-dark p-3 " action="../public/form" method="post">

        <!-- Email input -->
        <div class="form-outline  pt-5">
            <label class="form-label" for="form4Example2">Pseudo :  </label>
            <input type="text" id="form4Example2" name="pseudo" class="form-control" />
        </div>

        <!-- Name input -->
        <div class="form-outline ">
            <label class="form-label pt-5" for="form4Example1">Mot de passe : </label>
            <input type="password" id="form4Example1" name="password" class="form-control" />
        </div>

        <input type="hidden" name="formulaire" value="log">

        <!-- Submit button -->
        <div class="pt-5">
            <button type="submit" class="btn btn-primary btn-block ">Se connecter</button>
        </div>
    </form>
</div>
{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}