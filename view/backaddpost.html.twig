{% extends 'back.html.twig' %}
{% block title %} Ajouter un article {% endblock %}
{% block body %}
<div class="container m-5">
  <div class="row gap-2 justify-content-md-center text-center">
    <div class="col-4 p-5  ">
        <h3 class="fs-3 ">Ajouter votre article</h3>
        <img src="" alt="">
    </div>
    <div class="col-6 row gap-4">
        <form action="../public/form" method="post" enctype="multipart/form-data">
            <!-- titre input -->
            <div class="form-outline mb-4">
                <label class="form-label pt-5" for="form4Example1">Titre :</label>
                <input type="text" name="titre" id="form4Example1" class="form-control" />
            </div>

            <!-- contenu input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form4Example3">Contenu : </label>
                <textarea class="form-control" name="contenu" id="form4Example3" rows="4"></textarea>
            </div>

            <!-- photo input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="photo_url">Ajouter une photo : </label>
                <input type="file" name="photo_url" id="photo_url" class="form-control" />
            </div>

            <input type="hidden" name="formulaire" value="addPost">



            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
        </form>
    </div>
  </div>
</div>

{% endblock %}
{% block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}